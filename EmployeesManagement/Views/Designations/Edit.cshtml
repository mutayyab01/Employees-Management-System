@model EmployeesManagement.Models.Designation

@{
    ViewData["Title"] = "Edit";
}
<h4>Designation</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="row">

                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
